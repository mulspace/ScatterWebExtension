{
  "manifest_version": 2,
  "name": "Scatter",
  "description": "Decentralized signature, identity and authentication system.",
  "version": "6.3.0",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "unlimitedStorage",
    "http://*/*",
    "https://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    "inject.js"
  ],
  "externally_connectable": {
     "matches": 
        ["*://ezblock.io/*", "*://127.0.0.1/*", "*://localhost/*"]
  },
  "background":{
    "scripts":[
      "background.js"
    ]
  }
}
